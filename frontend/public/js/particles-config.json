      "speed": 0.3,
      "straight": false
    },
    "number": {
      "density": {
        "enable": true,
        "area": 800
      },
      "value": 150
    },
    "opacity": {
      "value": { "min": 0.1, "max": 0.8 },
      "animation": {
        "enable": true,
        "speed": 1,
        "minimumValue": 0.1,
        "sync": false
      }
    },
    "shape": {
      "type": "circle"
    },
    "size": {
      "value": { "min": 1, "max": 3 },
      "animation": {
        "enable": true,
        "speed": 2,
        "minimumValue": 0.5,
        "sync": false
      }
    }
